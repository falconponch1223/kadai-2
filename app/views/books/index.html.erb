<h1>Books</h1>
<table>
    <thead>
  	  <tr>
  	    <th>Title</th>
  	    <th>Body</th>
  	    <th colspan="3"></th>
  	  </tr>
  	</thead>
  	<tbody>
      <% @books.each do |book| %>
  	  <tr>
  	  	<td class="book-title"><%= book.title %></td>
  	  	<td class="book-body"><%= book.body %></td>
  	  	<td><%= link_to "Show", book_path(book) %>
        </td>
  	  	<td><%= link_to "Edit", edit_book_path(book) %></td>
  	  	<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
  	  </tr>
      <% end %>
      </tbody>
      </table>

<h2>New book</h2>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<!-- form for -->
<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <div>
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Book' %>

<% end %>


